<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_or"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.PaymentActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nfc_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:lottie_rawRes="@raw/nfc_tap"/>

    <TextView
        android:id="@+id/nfc_status"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Waiting for NFC reader..." />

    <Button
        android:id="@+id/nfc_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/soft_blue"
        android:textSize="30sp"
        android:text="Cancel" />

</LinearLayout>